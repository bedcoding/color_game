<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.jeux.ggavi.NUM3_Get_Item_Menu"
    android:background="#E0FFFF"
    android:weightSum="3"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.75"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/top_bar_back"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Item Shop"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/diet"
                android:padding="5dp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Food :"
                android:layout_weight="1"
                android:textColor="#00BFFF"
                android:gravity="start|center"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/Food_Amount_View_GetItem_Id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textColor="#00BFFF"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="start|center"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/water"
                android:padding="5dp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Water:"
                android:layout_weight="1"
                android:textColor="#00BFFF"
                android:textSize="18sp"
                android:gravity="start|center"

                />
            <TextView
                android:id="@+id/Water_Amount_View_GetItem_Id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textColor="#00BFFF"
                android:textSize="18sp"
                android:layout_weight="1"
                android:gravity="start|center"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/sslogo2"
                android:padding="5dp"
                android:layout_marginStart="50dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="   체력 감소량: "
                    android:textColor="#00BFFF"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textColor="#00BFFF"
                    android:textSize="18sp"
                    android:gravity="start|center"
                    />
            </LinearLayout>
        </RelativeLayout>
<!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:background="#00BFFF"
            />
-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_weight="1.12"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/top_bar_back"
            android:gravity="center"
            android:text="생존자1 아이템"
            android:textColor="#fabe29" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/diet"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="상품 가격 : [음식 10, 물 5]가 필요합니다"
                    android:textColor="#fabe29"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/firewall"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="한국산 건강식품 : 체력 감소량을 5 줄여줌"
                    android:textColor="#fabe29"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/Family_One_Buy_Button_Id"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_back_press"
                android:text="교환하기"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:layout_weight="1.13"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/top_bar_back"
            android:gravity="center"
            android:text="생존자2 아이템"
            android:textColor="#fabe29" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:baselineAligned="false"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/diet"
                    android:padding="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="상품 가격 : 음식 10, 물 5"
                    android:textColor="#fabe29"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/firewall"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="방사능 데미지 감소량 : 5"
                    android:textColor="#fabe29"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/Family_Two_Buy_Button_Id"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_back_press"
                android:text="교환하기"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>